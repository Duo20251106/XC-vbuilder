{
    "name": "xc-vbuilder",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "packageManager": "pnpm@10.20.0",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "test:playwright": "turbo run test:playwright",
        "lint:vue": "eslint .",
        "lint:css": "stylelint \"{packages,apps}/**/*.{css,scss,vue}\"",
        "lint:staged": "lint-staged",
        "format": "prettier --write .",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "stylelint --fix",
            "prettier --cache --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write --cache --parser=typescript"
        ]
    },
    "devDependencies": {
        "typescript": "5.9.3",
        "eslint": "9.39.1",
        "prettier": "3.6.2",
        "stylelint": "16.25.0",
        "stylelint-config-standard": "39.0.1",
        "stylelint-config-standard-vue": "1.0.0",
        "stylelint-config-standard-scss": "16.0.0",
        "cspell": "9.3.0",
        "cz-git": "1.12.0",
        "commitizen": "4.3.1",
        "@commitlint/cli": "20.1.0",
        "@commitlint/config-conventional": "20.0.0",
        "husky": "9.1.7",
        "commitlint": "20.1.0",
        "lint-staged": "16.2.6",
        "@xc-vbuilder/eslint-config-xc": "workspace:*",
        "@xc-vbuilder/commitlint-config-xc": "workspace:*",
        "@xc-vbuilder/stylelint-config-xc": "workspace:*",
        "turbo": "2.6.1"
    }
}
